{
  "name": "bfs-dice",
  "version": "0.1.1",
  "description": "Generate bitcoin BIP39 seed with dice",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "browserify:util-seed_gen": "browserify app/js/util-seed_gen.js --exclude=node_modules/bip39/src/wordlists/japanese.json --exclude=node_modules/bip39/src/wordlists/chinese_simplified.json --exclude=node_modules/bip39/src/wordlists/chinese_traditional.json --exclude=node_modules/bip39/src/wordlists/french.json --exclude=node_modules/bip39/src/wordlists/italian.json --exclude=node_modules/bip39/src/wordlists/korean.json --exclude=node_modules/bip39/src/wordlists/spanish.json -o app/js/dist/util-seed_gen_bundle.js",
    "package:linux": "electron-packager . bfs-dice --icon=assets/images/bfs-app-icon-v5-512.png --out=packages --platform=linux --arch=x64 --overwrite --prune=true --ignore=dev --ignore=.gitignore --ignore=.git --ignore=gpg-pub-key --ignore=tests --ignore=releases",
    "package:deb": "electron-installer-debian --src ./packages/bfs-dice-linux-x64 --dest packages/debs --icon=assets/images/bfs-app-icon-v5-512.png --arch amd64",
    "package:win": "electron-packager . bfs-dice_0.1.1 --out=packages --platform=win32 --arch=x64 --overwrite --prune=true --icon=assets/images/bfs-app-icon-v5-512.ico --ignore=dev --ignore=.gitignore --ignore=.git --ignore=gpg-pub-key --ignore=tests --ignore=releases",
    "package:mac": "electron-packager . bfs-dice_0.1.1 --overwrite --platform=darwin --arch=x64 --out=packages --prune=true --icon=assets/images/bfs-app.icns --ignore=dev --ignore=.gitignore --ignore=.git --ignore=gpg-pub-key --ignore=tests --ignore=releases"
  },
  "repository": "https://github.com/bitcoinfromscratch/bfs-dice.git",
  "keywords": [
    "bitcoin",
    "seed",
    "dice roll",
    "wallet",
    "cold storage",
    "bitcoin seed generator"
  ],
  "author": "btcfromscratch@protonmail.com",
  "license": "MIT",
  "devDependencies": {
    "bootstrap": "^4.3.1",
    "browserify": "^16.5.0",
    "electron": "^6.0.9",
    "electron-packager": "^14.0.6",
    "jquery": "^3.4.1",
    "popper.js": "^1.16.0"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "bip39": "^3.0.2",
    "express": "^4.17.1",
    "path": "^0.12.7"
  }
}
